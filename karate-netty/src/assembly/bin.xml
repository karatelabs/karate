<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <files>
        <file>
            <source>target/karate-${project.version}.jar</source>
            <outputDirectory></outputDirectory>
            <destName>karate.jar</destName>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>src/test/java/demo</directory>
            <outputDirectory>src/demo</outputDirectory>
        </fileSet>        
        <fileSet>
            <directory>src/test/resources</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>karate</include>
                <include>karate.bat</include>
            </includes>
        </fileSet>        
    </fileSets>   
</assembly>
